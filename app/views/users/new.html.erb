<div class='container'>
  <div class='row-fluid'>
    <div class='span12'>
    <% if flash[:errors_login] %>
      <div class='alert alert-error fade in'>
        <% flash[:errors_login].each do |error| %>
          <button type='button' class="close" data-dismiss="alert">x</button>
          <%= error %>
        <% end %>
    <% end %>
    </div>
  <div class='hero-unit'>
    <h1>Send birthday emails automatically</h1>
  </div>
  <div class='row-fluid'>
    <%=link_to 'Sign in using your Gmail account', '/auth/google_oauth2', :class=> 'btn btn-success' %>
  </div>
</div>